<div class="table-responsive">

    <table id="statusTable" class="table table-striped table-hover">
        <thead>
            <tr>
                <th></th>
                <th>Status</th>
                <th>Code</th>
                <th>Trust</th>
                <th>Progress</th>
                <th>Last run</th>
                <th>Last duration</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>

    <script id="some-template" type="text/x-handlebars-template">
        <tr id="org-{{Code}}">
            <td>
                <button id="btnStart{{Code}}" class="btn btn-primary" type="button">
                    <span>Start</span>
                    <i class="fa fa-spin fa-circle-notch collpse"></i>
                </button>
            </td>
            <td>{{State}}</td>
            <td>{{Code}}</td>
            <td>{{Name}} {{#if UseHesData}} <span class="label label-danger">Hes Data</span> {{/if}}</td>
            <td>
                {{#if PercentDone}}
                <div class="progress">
                    <div class="progress-bar" role="progressbar" aria-valuenow="{{PercentDone}}" aria-valuemin="0" aria-valuemax="100" style="width: {{PercentDone}}%;">
                        {{PercentDoneDisplay}}%
                    </div>
                </div>
                <small class="text-muted">{{formatNumber Processed}} / {{formatNumber PatientCount}}</small>
                {{/if}}
                {{#unless PercentDone}}
                <small class="text-muted">
                    {{formatNumber PatientCount}}
                </small>
                {{/unless}}
            </td>
            <td>{{formatRelative Started}}</td>
            <td>{{#if LastDuration}} {{formatNumber LastDuration}} minutes {{/if}} {{#unless LastDuration}} &ndash; {{/unless}}</td>
        </tr>
    </script>
</div>

<ul id="messages"></ul>
